<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ui.ShopRegisterActivity">


    <TextView
        android:id="@+id/tv_nama_toko"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="12dp"
        android:text="@string/nama_toko"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_nama_toko"
        android:layout_width="387dp"
        android:layout_height="45dp"
        android:hint="@string/tulis_nama_toko_kamu_disini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_nama_toko"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.046" />

    <TextView
        android:id="@+id/alamat_toko"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/alamat_toko"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/et_nama_toko"
        app:layout_constraintTop_toBottomOf="@+id/et_nama_toko" />

    <EditText
        android:id="@+id/et_alamat_toko"
        android:layout_width="387dp"
        android:layout_height="45dp"
        android:layout_marginTop="1.5dp"
        android:hint="@string/lengkapi_alamat_toko_kamu_disini"
        app:layout_constraintStart_toStartOf="@+id/alamat_toko"
        app:layout_constraintTop_toBottomOf="@+id/alamat_toko" />

    <TextView
        android:id="@+id/tv_no_telepon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_telepon"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/et_alamat_toko"
        app:layout_constraintTop_toBottomOf="@+id/et_alamat_toko" />

    <EditText
        android:id="@+id/et_no_telepon"
        android:layout_width="387dp"
        android:layout_height="45dp"
        android:hint="@string/masukkan_nomor_telepon_kamu_disini"
        app:layout_constraintStart_toStartOf="@+id/tv_no_telepon"
        app:layout_constraintTop_toBottomOf="@+id/tv_no_telepon" />

    <Button
        android:id="@+id/btn_simpan_toko"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/simpan"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>