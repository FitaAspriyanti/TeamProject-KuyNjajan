<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/l_dagangan"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="5dp"
    android:layout_marginVertical="1dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/foto_dagangan"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_baseline_picture_in_picture_24"/>

        <TextView
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="4dp"
            android:id="@+id/nama_dagangan"
            android:ellipsize="marquee"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Produk"/>

        <TextView
            android:id="@+id/khas_dagangan"
            android:textColor="@color/utama"
            android:textSize="10dp"
            android:textStyle="bold"
            android:layout_marginTop="3dp"
            android:layout_marginHorizontal="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bogor- Jawa Barat" />

        <TextView
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:textSize="16dp"
            android:layout_marginHorizontal="5dp"
            android:id="@+id/harga_dagangan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp.0"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>