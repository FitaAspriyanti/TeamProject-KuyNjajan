<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    tools:context=".activity.ui.UploadProductActivity">

    <include
        android:id="@+id/include"
        layout="@layout/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_tambah_foto"
        android:layout_width="119dp"
        android:layout_height="112dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/tambah_foto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include" />

    <Button
        android:id="@+id/btn_galeri"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="20dp"
        android:text="@string/galeri"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textAppearance="@style/TextAppearance.AppCompat"
        app:cornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_tambah_foto" />

    <Button
        android:id="@+id/btn_kamera"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="55dp"
        android:text="@string/kamera"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textAppearance="@style/TextAppearance.AppCompat"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_tambah_foto" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="#c0c0c0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include"
        app:layout_constraintVertical_bias="0.301"
        tools:layout_editor_absoluteX="0dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2">

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_nama_produk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Nama Produk"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <EditText
        android:id="@+id/et_nama_produk"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:hint="Masukkan Nama Produk"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/tv_nama_produk"
        app:layout_constraintTop_toBottomOf="@+id/tv_nama_produk" />

    <TextView
        android:id="@+id/tv_jenis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Jenis"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_nama_produk" />

    <EditText
        android:id="@+id/et_jenis"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:hint="Masukkan Jenis Produk"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/tv_nama_produk"
        app:layout_constraintTop_toBottomOf="@+id/tv_jenis" />

    <TextView
        android:id="@+id/tv_asal_daerah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Asal Daerah"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_jenis" />

    <EditText
        android:id="@+id/et_asal_daerah"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:hint="Masukkan Asal Daerah"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/tv_nama_produk"
        app:layout_constraintTop_toBottomOf="@+id/tv_asal_daerah" />

    <TextView
        android:id="@+id/tv_harga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Harga"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_asal_daerah" />

    <EditText
        android:id="@+id/et_harga"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:hint="Masukkan Asal Daerah"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/tv_nama_produk"
        app:layout_constraintTop_toBottomOf="@+id/tv_harga" />

    <TextView
        android:id="@+id/tv_deskripsi_produk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Deskripsi Produk"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_harga" />

    <EditText
        android:id="@+id/et_deskripsi_produk"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/text_border"
        android:hint="Masukkan Deskripsi Produk"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/tv_nama_produk"
        app:layout_constraintTop_toBottomOf="@+id/tv_deskripsi_produk" />

    <Button
        android:id="@+id/btn_upload_produk"
        android:layout_width="194dp"
        android:layout_height="48dp"
        android:layout_marginBottom="10dp"
        android:text="Upload"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>